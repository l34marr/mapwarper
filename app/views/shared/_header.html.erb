<div class="user_status">
  <% if user_signed_in? %>
    帳號:
    <% if current_user.provider? %>
      <%= link_to "#{image_tag(current_user.provider+'_logo.png', width: '17', height: '17', class: 'user_provider')} #{current_user.login.capitalize}".html_safe, user_path(current_user) %>
    <% else %>
      <%= link_to h(current_user.login.capitalize), user_path(current_user) %>
    <% end %>
    <%= link_to "我的地圖", my_maps_path(current_user) %>
    <%= link_to "編輯記錄", user_activity_path(current_user) %>
    <%= link_to "個人設定", edit_user_registration_path %>
    <%= link_to "登出", destroy_user_session_path, :method => :delete %>
  <% else %>
    <%= link_to "登入", new_user_session_path %>
    <%= link_to "建立帳號", new_user_registration_path %>
  <% end %>
  <% if user_signed_in? %>
    <% if current_user.has_role?("administrator") || current_user.has_role?("super user") %>
      <br />
      <%= link_to "所有地圖", maps_path %>
      <%= link_to "所有圖集", layers_path %>
      <%= link_to "所有記錄", activity_path %>
      <%= link_to "所有留言", comments_path %>
      <%= link_to "群組", groups_path %>
      <%= link_to "匯入", imports_path %>
      <%= link_to "使用者統計", stats_users_path %>
      <%= link_to "管理使用者", users_path %>
    <% end %>
  <% end %>
</div>
